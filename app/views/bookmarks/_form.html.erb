<div class="col-md-8">
    <%= form_for [topic,bookmark] do |f| %>
      <div class ="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter the title" %>
      </div>
      <div class="form-group">
      
        <%= f.submit "Save", class: 'btn btn-success' %> 
      </div>
  </div>
<% end %>